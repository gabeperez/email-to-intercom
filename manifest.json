{
    "manifest_version": 3,
    "name": "Email to Intercom Linker",
    "version": "1.0",
    "description": "Makes email addresses clickable and sends emails via Intercom when clicked.",
    "permissions": [
        "activeTab",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://app.intercom.io/*",
        "https://api.intercom.io/*",
        "https://api.eu.intercom.io/*",
        "https://api.au.intercom.io/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": ["email2inter.js"]
        }
    ],
    "options_page": "options.html"
}
